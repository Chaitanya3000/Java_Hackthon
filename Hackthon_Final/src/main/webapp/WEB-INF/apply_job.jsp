<!DOCTYPE html>
<html lang="en">
<head>
<title>Apply for Jobs</title>
<style>
.form {
	display: grid;
	margin: 10rem;
	gap: 1rem;
}
</style>
</head>
<body>
	<form id="form" onsubmit="return validateForm()">
		<input placeholder="First Name" type="text" required> <input
			placeholder="Last Name" type="text" required> <input
			placeholder="Email" type="email" required> <input
			placeholder="PhoneNo" type="tel" required
			pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"> 
			<input placeholder="address" type="text" required> 
			<input placeholder="city" type="text" required> 
			<input placeholder="state" type="text" required> 
			<input placeholder="zip" type="number" required>
		<select required>
			<option>Select Country</option>
			<option>India</option>
			<option>USA</option>
			<option>Canada</option>

		</select> <select required>
			<option>Select Education Level</option>
			<option>Inter</option>
			<option>Btech</option>
			<option>Masters</option>
			<option>PHD</option>

		</select> <select required>
			<option>Select Education Type</option>
			<option>SSc</option>

		</select><input placeholder="Upload resumae" type="file" accept=".pdf,.doc,.docx" required>
		<textarea placeholder="Cover Letter" rows="4" cols="50"></textarea>
		<input type="checkbox" id="employed" name="employed"> <input
			type="text" id="currentEmployer" name="currentEmployer"> <input
			type="number" id="yearsOfExp" name="yearsOfExp"> <select
			placeholder="Jobs" multiple required>
			<option>HR</option>
			<option>Developer</option>
			<option>Admin</option>

		</select><br> <br> <input type="submit" value="Submit">
	</form>
	<script>
		function validateForm() {
			var YearOfExp = document.getElementById("yearsOfExp").value;

			if (isNaN(YearOfExp)) {
				alert("It must be a number.");
				return false;
			}

			return true;
		}
	</script>

</body>
</html>